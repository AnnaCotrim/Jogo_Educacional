package boladao;

public class Tempo {

	public double init, fim, tempo;
	public boolean teste = true;
	public boolean teste1;

	public Tempo(double tempo) {
		this.tempo = tempo;
	}

	public void rodar(double tempo)
	{
		if (teste == true) {
			
			if (teste1 == false) {
				init = System.currentTimeMillis();
				teste1 = true;
			}

			if (teste1 == true) {
				fim = System.currentTimeMillis();
				if (fim - init >= this.tempo) {
					
					teste = false;
					teste1 = false;
					if (fase.nivel > 5)
					{
						fase.setEmJogo(false);
					}
					
				} else {
					fim = System.currentTimeMillis();
				}

			}
		}
	}

}
